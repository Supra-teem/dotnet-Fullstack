@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td style="width: 150px">
                Name<br />
                <input type="text" id="txtName" style="width:140px" />
            </td>
            <td style="width: 150px">
                Designation:<br />
                <input type="text" id="txtDesg" style="width:140px" />
            </td>
            <td style="width: 150px">
                Salary:<br />
                <input type="text" id="txtSal" style="width:140px" />
            </td>
            <td style="width: 200px">
                <br />
                <input type="button" id="btnAdd" value="Add" />
            </td>
        </tr>
    </table>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>
    <script type="text/javascript">
        $("body").on("click", "#btnAdd", function () {
            var txtName = $("#txtName");
            var txtDesg = $("#txtDesg");
            var txtSal = $("#txtSal");
            var e = {};
            e.Name = txtName.val();
            e.Designation = txtDesg.val();
            e.Salary = txtSal.val();
            $.ajax({
                type: "POST",
                url: "/api/Emp/InsertCustomer",
                data: JSON.stringify(e),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (r) {
                    alert("Id: " + r.ID.toString());
                }
            });
        });
    </script>
</body>
</html>
